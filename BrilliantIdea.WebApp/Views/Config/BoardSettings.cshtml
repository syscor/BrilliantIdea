@model BrilliantIdea.WebApp.Models.ViewModel.BoardSettingsViewModel

<div class="row-fluid">
    <div class="span12">
        <h3 class="pull-right">Configuración de Tarjetas de Adquisición de Datos</h3>
    </div>
</div>
<div id="boardSteps">
    <ul>
        <li><a href="#addBoard">Agregar</a></li>
        <li><a href="#selectBoard">Editar</a></li>
        <li><a href="#configBoard">Configurar</a></li>
    </ul>
    <div id="addBoard" style="min-height: 500px;">
        <div class="row-fluid">
            <div class="span4">
                <span class="badge">1</span>
                <h4 style="margin-left: 35px; margin-top: -19px">Datos Generales</h4>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span4">
                <label>Nombre del dispositivo</label>
                <input style="width: 100%" type="text" placeholder="Asignar un nombre..."/>
            </div>
            <div class="span4"></div>
        </div>
        <div class="row-fluid">
            <div class="span4">
                <label>Descripción</label>
                <textarea style="width: 100%" rows="3"></textarea>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span4">
                <label>Tipo de dispositivo</label>

            </div>
            <div class="span4"></div>
        </div>
    </div>
    <div id="selectBoard">Panel2</div>
 
    <div id="configBoard">Panel2</div>
</div>

<script type="text/javascript">
    BoardSettings.initialize();
</script>