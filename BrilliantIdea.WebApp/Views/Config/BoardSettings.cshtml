<div id="modalContainer"></div>
<div class="row-fluid">
    <div class="span12">
        <h3 class="pull-right">Configuración de Tarjetas de Adquisición de Datos</h3>
    </div>
</div>
<div id="boardSteps">
    <ul>
        <li><a href="#boardList">Listado</a></li>
        <li><a href="#addBoard">Agregar</a></li>
        <li><a href="#selectBoard">Configurar</a></li>
        <li><a href="#configBoard">Administrar</a></li>
    </ul>

    <div id="boardList">
        <div class="row-fluid">
            <div class="span2 offset10">
                <p style="font-size: 11.9px; font-weight: bold;">Ocultar deshabilitados<input style="margin-top: -2px; margin-left: 5px;" type="checkbox" data-bind="checked:showOnlyEnables"/></p>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <table id="gvBoards" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Dispositivo</th>
                            <th>Descripción</th>
                            <th>Dirección</th>
                            <th style="text-align: center">Estatus</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach:boardFilteredList">
                        <tr data-bind="css:{warning:Enable()==false}">
                            <td data-bind="text: Name"></td>
                            <td data-bind="text: Description"></td>
                            <td data-bind="text: Url"></td>
                            <td style="text-align: center">
                                <a href="javascript:void(0);" data-bind="click:$parent.toggleEnable"><i data-bind="css: {'icon-check':Enable(), 'icon-minus':Enable()==false}"></i></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row-fluid">
            <div style="text-align: right" class="span12">
                <p><i class="icon-check"></i>Habilitado  <i  class="icon-minus"></i>Deshabilitado  <i class="icon-edit"></i>Editar </p>
            </div>
        </div>
    </div>

    <div id="addBoard" style="min-height: 400px;">
        <div class="row-fluid">
            <div class="span4">
                <span class="badge">1</span>
                <h4 style="margin-left: 35px; margin-top: -19px">Datos Generales</h4>
                <label><strong>Nombre del dispositivo</strong></label>
                <input id="txtname" style="width: 100%" type="text" placeholder="Asignar un nombre..." data-bind=" value : boardName"/>
                <label><strong>Descripción</strong></label>
                <textarea id="txtarea" style="width: 100%" rows="3" data-bind="value:boardDescription"></textarea>
                <label><strong>Tipo de dispositivo</strong></label>
                <select id="boardDropDown" style="width: auto;" data-bind="options:boardTypes, optionsText: 'Name', value:selectedBoardType, optionsCaption:'Selecciona el tipo de dispositivo...'"></select>
            </div>
            <div class="span4 offset1">
                <span class="badge">2</span>
                <h4 style="margin-left: 35px; margin-top: -19px">Datos de enlace</h4>
                <label><strong>Dirección IP ó Url asignada</strong></label>
                <input id="txtip" style="width: 100%" type="text" placeholder="Dirección IP" data-bind="value:deviceUrl"/>
                <a href="javascript:void(0);" class="btn btn-info pull-right" style="color: white; margin-top: 5px;">Probar comunicación</a>
                <label style="margin-top: 40px;"><strong>Caracteristicas GPIO</strong></label>
                <table id="gvPorts" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Pins</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach:selectedBoardType() ? selectedBoardType().PinFeatures() : new Array()">
                        <tr>
                            <td style="text-align: center;" data-bind="text: Pins"></td>
                            <td data-bind="text: PinDescription"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span4 offset4" style="margin-top: 40px;">
                <a data-bind="click:saveBoard" class="btn btn-primary" style="color: white;">Guardar</a>
                <a href="#" class="btn btn-danger" style="color: white; margin-left: 30px;">Cancelar</a>
            </div>
        </div>
    </div>
    <div id="selectBoard">
        <h3>Configuración de puertos y sensores</h3>
        
    </div>
 
    <div id="configBoard">Administración de dispositivos y edición de datos</div>
</div>

<script type="text/javascript">
    BoardSettings.initialize();
</script>