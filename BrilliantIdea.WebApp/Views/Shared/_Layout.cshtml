<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
         <title>SysCor S.A. Monitoring System</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

        <!--Bootstrap-->
        @*<link href="~/Content/bootstrap/bootstrap.css" rel="stylesheet"/>*@
        <!--Wijmo Theme-->
        <link href="~/Content/themes/rocket/jquery-wijmo.css" rel="stylesheet" type="text/css" title="rocket-jqueryui" />
        <link href="~/Content/jquery.wijmo-complete.all.2.2.1.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/Dynatree/skin-vista/ui.dynatree.css"/>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>

    <body>
        @Html.Hidden("processTreeUrl", @Url.Action("GetTree", "Process"))
        <header>
            <div class="topbar">
                <div class="fill" style="height: 40px">
                    <div>
                        <span style="color: white;position: absolute;z-index: 2;margin-left: 15px;margin-top: 10px;font-size: 13pt;font-weight: bold;font-family: Arial;">SysControl</span>
                        <ul id="menu" class="nav">
                            <li>
                                <a href="javascript:void(0);" id="configLink" title="Configuración" onclick="SysCor.performViewChange('/Process/ProcessView')">Procesos</a>
                            </li>
                            <li>@Html.ActionLink("Monitoreo", "MonitorView", "Monitor")</li>
                            <li>@Html.ActionLink("Control", "About", "Home")</li>
                            <li style="margin-left: 20px">
                                <a href="javascript:void(0);" id="configLink" title="Configuración" onclick="SysCor.performViewChange('/Config/ControlPanel')">
                                    <img alt="Configuración" src="~/Content/images/genericuse/settings.png" width="15" />
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <div id="bodyContainer" class="container">
            @RenderSection("featured", false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <div id="footer-wrapper">
            <div class="footer" id="footer">
                <div style="min-width: 600px; float: right;" >
                    <div class="footer-text">
                        &copy; @DateTime.Now.Year - SysCor Systems | <a target="_blank" class="bluelink " href="mailto:info@syscor.com?Subject=SysControl v1 Info Request">info@syscor.com</a> | 4431 725600 &nbsp;&nbsp;&nbsp;&nbsp; 
                    </div>
                    <div class="footer-icons">
                        <div style="float: left;">
                            <a href="http://www.linkedin.com/company/288446?trk=tyah" target="_blank"><img width="21" height="20" alt="LinkedIn" src="/Content/images/linkedIn.png"/></a>                
                            <a href="https://www.facebook.com/xxxx" target="_blank"><img width="21" height="20" alt="facebook" src="/Content/images/facebook.png"/></a> 
                            <a href="https://twitter.com/#!/xxx" target="_blank"><img width="21" height="20" alt="twitter" src="/Content/images/twiiter.png"/></a> 
                        </div>
                    </div>
                </div>  
            </div>
            <div class="clearfix"></div>
        </div> 
        

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/Content/js")
        <script src="~/Scripts/knockout-2.2.0.js" type="text/javascript"></script>
        <script src="~/Scripts/raphael-min.js" type="text/javascript"></script>
        <script src="~/Scripts/justgage.1.0.1.min.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery-ui-1.9.0.min.js" type="text/javascript"></script>
        <!--Wijmo Widgets JavaScript-->
        <script src="~/Scripts/jquery.wijmo-open.all.2.2.1.min.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.wijmo-complete.all.2.2.1.min.js" type="text/javascript"></script>
        <script src="~/Content/Dynatree/jquery.dynatree.min.js"></script>

        <script type="text/javascript">
            SysCor.initialize();
            Process.initialize();
        </script>
        @RenderSection("scripts", false)
        
    </body>
</html>
