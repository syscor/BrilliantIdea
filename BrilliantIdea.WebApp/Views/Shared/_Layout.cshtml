<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
         <title>SysCor S.A. Monitoring System</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />

        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <!--Wijmo Theme-->
        <link href="~/Content/themes/rocket/jquery-wijmo.css" rel="stylesheet" type="text/css" title="rocket-jqueryui" />
        <link href="~/Content/jquery.wijmo-complete.all.2.2.1.min.css" rel="stylesheet" type="text/css" />
    </head>

    <body>
        <header>
            <div class="topbar">
                <div class="fill" style="height: 40px">
                    <div class="container">
                        <span style="color: white;position: absolute;z-index: 2;margin-left: 15px;margin-top: 10px;font-size: 13pt;font-weight: bold;font-family: Arial;">SysControl</span>
                        <ul id="menu" class="nav">
                            <li class="active">@Html.ActionLink("Monitoreo", "MonitorView", "Monitor")</li>
                            <li>@Html.ActionLink("Control", "About", "Home")</li>
                            <li>@Html.ActionLink("Configuración", "Contact", "Home")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <div id="bodyContainer" class="container">
            @RenderSection("featured", false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - SysCor Systems</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/Content/js")
        <script src="~/Scripts/raphael-min.js"></script>
        <script src="~/Scripts/justgage.1.0.1.min.js"></script>
        <script src="~/Scripts/jquery-ui-1.9.0.min.js" type="text/javascript"></script>
        <!--Wijmo Widgets JavaScript-->
        <script src="~/Scripts/jquery.wijmo-open.all.2.2.1.min.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.wijmo-complete.all.2.2.1.min.js" type="text/javascript"></script>

        
        <script type="text/javascript">
             SysCor.initialize();
             Monitor.initialize();
        </script>
        @RenderSection("scripts", false)
        
          <script>
              $("#menu").wijmenu();
              var g1, g2, g3, g4;

              window.onload = function () {
                  var g1 = new JustGage({
                      id: "g1",
                      value: getRandomInt(0, 100),
                      min: 0,
                      max: 100,
                      title: "Big Fella",
                      label: "pounds"
                  });

                  var g2 = new JustGage({
                      id: "g2",
                      value: getRandomInt(0, 100),
                      min: 0,
                      max: 100,
                      title: "Small Buddy",
                      label: "oz"
                  });

                  var g3 = new JustGage({
                      id: "g3",
                      value: getRandomInt(0, 100),
                      min: 0,
                      max: 100,
                      title: "Tiny Lad",
                      label: "oz"
                  });

                  var g4 = new JustGage({
                      id: "g4",
                      value: getRandomInt(0, 100),
                      min: 0,
                      max: 100,
                      title: "Little Pal",
                      label: "oz"
                  });

                  setInterval(function () {
                      g1.refresh(getRandomInt(50, 100));
                      g2.refresh(getRandomInt(50, 100));
                      g3.refresh(getRandomInt(0, 50));
                      g4.refresh(getRandomInt(0, 50));
                  }, 2500);
              };
        </script>
    </body>
</html>
